{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": ["dist", "node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
